{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "module": "commonjs",
    "diagnostics": true,
    "sourceMap": true,
    "target": "ES6",
    "jsx": "react",
    "experimentalDecorators": true,
    "allowUnusedLabels": true
  },
  "exclude": [
    "node_modules"
  ]
}